<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.siaray.myvolleysample.activities.MainActivity">


    <Button
        android:id="@+id/btnJsonObject"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Request Json Object" />

    <Button
        android:id="@+id/btnJsonArray"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnJsonObject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Request Json Array" />

    <Button
        android:id="@+id/btnJsonString"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnJsonArray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Request Json String" />

    <Button
        android:id="@+id/btnCancelRequest"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnJsonString"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Cancel Request" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />
</RelativeLayout>
